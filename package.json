{
  "name": "star-wars-galaxy",
  "version": "1.1.0",
  "private": true,
  "dependencies": {
    "bootstrap": "3.4.1",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "history": "4.7.2",
    "husky": "0.15.0-rc.9",
    "jest-enzyme": "6.0.2",
    "less": "3.0.4",
    "lint-staged": "7.2.0",
    "npm-check-updates": "2.14.2",
    "prettier": "1.13.5",
    "prop-types": "15.6.2",
    "react": "16.4.1",
    "react-dom": "16.4.2",
    "react-equalizer": "1.3.0",
    "react-loadable": "5.4.0",
    "react-redux": "5.0.7",
    "react-router": "4.3.1",
    "react-router-dom": "4.3.1",
    "react-router-redux": "next",
    "react-scripts": "1.1.4",
    "react-switch": "3.0.4",
    "react-test-renderer": "16.4.1",
    "redux": "4.0.0",
    "redux-api-middleware": "2.3.0",
    "redux-thunk": "2.3.0",
    "watch": "1.0.2"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css,less}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/*.js",
      "!src/containers/**/*.js",
      "!src/reducers/index.js"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "arrowParens": "avoid"
  },
  "scripts": {
    "precommit": "lint-staged",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build-css": "lessc ./src/less/style.less ./src/style.css",
    "watch-css": "npm run build-css && watch --interval=0.1 'npm run build-css' ./src/less",
    "test": "react-scripts test --env=jsdom",
    "code-style": "prettier --write \"src/**/*.{js,jsx,json,css}\"",
    "coverage": "npm test -- --coverage",
    "check-deps": "ncu"
  }
}
