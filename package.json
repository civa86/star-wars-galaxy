{
  "name": "star-wars-galaxy",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "bootstrap": "3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "history": "^4.7.2",
    "husky": "^0.15.0-rc.2",
    "jest-enzyme": "^4.1.1",
    "less": "^2.7.3",
    "lint-staged": "^6.0.1",
    "prettier": "^1.10.2",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-bootstrap": "^0.32.0",
    "react-dom": "^16.2.0",
    "react-equalizer": "^1.3.0",
    "react-loadable": "^5.3.1",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "next",
    "react-scripts": "1.0.17",
    "react-switch": "^2.3.0",
    "react-test-renderer": "^16.2.0",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "watch": "^1.0.2"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css,less}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "precommit": "lint-staged",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build-css": "lessc ./src/less/style.less ./src/style.css",
    "watch-css": "npm run build-css && watch --interval=0.1 'npm run build-css' ./src/less",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "coverage": "npm test -- --coverage",
    "dist": "CI=true npm test && npm run build-css && npm run build"
  }
}
