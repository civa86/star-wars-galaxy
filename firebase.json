{
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/version.txt",
        "destination": "/static/version.txt"
      },
      {
        "source": "/humans.txt",
        "destination": "/humans.txt"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
